{% extends 'default_frame.twig' %}

{% set menus = ['questionnaire', 'questionnaire_edit'] %}

{% block title %}アンケート管理{% endblock %}
{% block sub_title %}アンケート編集{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block javascript %}
<script>
    $(function () {
        var question1_note = $("#admin_questionnaire_question1_note");
        var question4_note = $("#admin_questionnaire_question4_note");
        var question5_note = $("#admin_questionnaire_question5_note");

        question1_note.prop('disabled', !$("#admin_questionnaire_question1_5").is(':checked'));
        question4_note.prop('disabled', !$("#admin_questionnaire_question4_5").is(':checked'));
        question5_note.prop('disabled', !$("#admin_questionnaire_question5_4").is(':checked'));

        $("input[name='admin_questionnaire[question1]']").change(function () {
            question1_note.prop('disabled', $(this).val() !== '5')
        });

        $("input[name='admin_questionnaire[question4]']").change(function () {
            question4_note.prop('disabled', $(this).val() !== '5')
        });

        $("input[name='admin_questionnaire[question5]']").change(function () {
            question5_note.prop('disabled', $(this).val() !== '4')
        })
    })
</script>
{% endblock javascript %}

